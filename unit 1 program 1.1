#include <iostream>
#include <cstdlib>
using namespace std;

int fact(int n);

int main() {
    system("color F0"); // Fixed quotes
    int n;

    cout << "Roll No: 24B11AI449" << endl;  // Fixed <<
    cout << "Enter n value: ";
    cin >> n;

    int result = fact(n);
    if (result == -1)
        cout << "Factorial not defined for negative numbers" << endl;
    else
        cout << "Factorial: " << result << endl;

    return 0;
}

int fact(int n) {
    if (n < 0)
        return -1;
    else if (n == 0 || n == 1)
        return 1;
    else
        return n * fact(n - 1); // Fixed n-1
}
